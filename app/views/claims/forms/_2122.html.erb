<h3 class='h3 text-center'>2122 Power Of Attorney</h3>
<ul>
  <li><b>Status: </b><%= @form["attributes"]["status"] %></li>
  <li><b>Date Request Accepted: </b><%= @form["attributes"]["date_request_accepted"] %></li>
  <li><b>Representative: </b><%= @form["attributes"]["representative"]["poa_first_name"] %> <%= @form["attributes"]["representative"]["poa_last_name"] %></li>
</ul>

<h3 class='h3'>Supporting Documents</h3>
<%= form_tag poa_upload_path(@form['id']), multipart: true do %>
  <div class="row">
    <div class="col-4">
      <label>Add Supporting Document</label>
      <div class='form-group'>
        <%= file_field_tag :attachment, class: 'form-input' %>
      </div>
    </div>
    <div class="col-8">
      <%= submit_tag 'Upload', class: 'btn btn-primary'%>
    </div>
  </div>
<% end %>
